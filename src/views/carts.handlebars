        <p><strong>Producto:</strong> {{this.products.title}}</p>
        <p><strong>Cantidad:</strong> {{this.quantity}}</p>
      </li>
    {{else}}
      <li class="cart-item cart-item-empty">El carrito se encuentra vac√≠o.</li>
    {{/each}}
  </ul>

